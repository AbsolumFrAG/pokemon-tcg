<%- contentFor('head') %>
<title>Ouvrir un booster</title>

<%- contentFor('body') %>
<div class="max-w-4xl mx-auto">
  <div class="bg-white rounded-lg shadow-lg p-6 mb-8">
    <h1 class="text-3xl font-bold mb-6">Booster Pokemon</h1>

    <!-- Informations sur les probabilités -->
    <div class="bg-gray-50 rounded-lg p-4 mb-6">
      <h2 class="text-xl font-semibold mb-3">Probabilités par paquet</h2>
      <div class="grid grid-cols-2 md:grid-cols-5 gap-4">
        <% Object.entries(probabilities).forEach(([rarity, probability]) => { %>
        <div class="text-center p-2 rounded bg-white shadow">
          <div class="font-medium mb-1"><%= rarity %></div>
          <div class="text-sm text-gray-600"><%= probability %></div>
        </div>
        <% }) %>
      </div>
    </div>

    <!-- Booster -->
    <div class="text-center">
      <form action="/boosters/api/open" method="POST">
        <div
          class="relative w-64 h-96 mx-auto mb-4 transform hover:scale-105 transition-transform cursor-pointer"
        >
          <img
            src="/img/booster-pack.jpg"
            alt="Booster Pack"
            class="w-full h-full object-cover rounded-lg shadow-lg"
          />
          <div
            class="absolute inset-0 bg-black bg-opacity-40 flex items-center justify-center rounded-lg"
          >
            <span class="text-white text-2xl font-bold"
              >Cliquez pour ouvrir</span
            >
          </div>
          <button
            type="submit"
            class="absolute inset-0 w-full h-full opacity-0 cursor-pointer"
          >
            Ouvrir le booster
          </button>
        </div>
        <button
          type="submit"
          class="mt-4 bg-blue-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-blue-700 transform transition hover:scale-105"
        >
          Ouvrir le booster
        </button>
      </form>
    </div>
  </div>
</div>
