<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pokemon Card Manager | <%= typeof title !== 'undefined' ? title : 'Accueil' %></title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/img/favicon.png">
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-gray-50">
    <!-- Navigation -->
    <nav class="bg-indigo-600 shadow-lg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <!-- Logo et Brand -->
                <div class="flex">
                    <div class="flex-shrink-0 flex items-center">
                        <a href="/" class="flex items-center">
                            <span class="text-white font-bold text-lg">Pokemon Card Manager</span>
                        </a>
                    </div>
                </div>

                <!-- Navigation principale - Desktop -->
                <div class="hidden sm:ml-6 sm:flex sm:items-center">
                    <div class="flex space-x-4">
                        <a href="/" 
                           class="<%= typeof page !== 'undefined' && page === 'home' ? 'bg-indigo-700' : 'hover:bg-indigo-700' %> text-white px-3 py-2 rounded-md text-sm font-medium">
                            <i class="fas fa-home mr-2"></i>Accueil
                        </a>
                        <a href="/cards" 
                           class="<%= typeof page !== 'undefined' && page === 'cards' ? 'bg-indigo-700' : 'hover:bg-indigo-700' %> text-white px-3 py-2 rounded-md text-sm font-medium">
                            <i class="fas fa-cards mr-2"></i>Cartes
                        </a>
                        <% if (typeof user !== 'undefined' && user) { %>
                            <a href="/cards/user/collection" 
                               class="<%= typeof page !== 'undefined' && page === 'collection' ? 'bg-indigo-700' : 'hover:bg-indigo-700' %> text-white px-3 py-2 rounded-md text-sm font-medium">
                                <i class="fas fa-folder mr-2"></i>Ma Collection
                            </a>
                            <a href="/cards/boosters" 
                               class="<%= typeof page !== 'undefined' && page === 'boosters' ? 'bg-indigo-700' : 'hover:bg-indigo-700' %> text-white px-3 py-2 rounded-md text-sm font-medium">
                                <i class="fas fa-box-open mr-2"></i>Boosters
                            </a>
                        <% } %>
                    </div>
                </div>

                <!-- Menu utilisateur -->
                <div class="hidden sm:ml-6 sm:flex sm:items-center">
                    <% if (typeof user !== 'undefined' && user) { %>
                        <!-- Affichage des pièces -->
                        <div class="text-yellow-400 mr-4">
                            <i class="fas fa-coins mr-2"></i>
                            <span id="userCoins" class="font-medium"><%= user.coins %></span>
                        </div>

                        <!-- Dropdown utilisateur -->
                        <div class="ml-3 relative group">
                            <div>
                                <button type="button" class="flex items-center max-w-xs bg-indigo-600 rounded-full focus:outline-none">
                                    <img class="h-8 w-8 rounded-full" src="<%= user.profileImage %>" alt="<%= user.username %>">
                                    <span class="ml-2 text-white"><%= user.username %></span>
                                </button>
                            </div>
                            <div class="hidden group-hover:block absolute right-0 mt-2 w-48 rounded-md shadow-lg py-1 bg-white ring-1 ring-black ring-opacity-5">
                                <a href="/profile" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                    <i class="fas fa-user mr-2"></i>Profil
                                </a>
                                <% if (user.role === 'admin') { %>
                                    <a href="/admin" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                        <i class="fas fa-cog mr-2"></i>Administration
                                    </a>
                                <% } %>
                                <hr class="my-1">
                                <a href="/auth/logout" class="block px-4 py-2 text-sm text-red-700 hover:bg-gray-100">
                                    <i class="fas fa-sign-out-alt mr-2"></i>Déconnexion
                                </a>
                            </div>
                        </div>
                    <% } else { %>
                        <a href="/auth/login" class="text-white hover:bg-indigo-700 px-3 py-2 rounded-md text-sm font-medium">
                            <i class="fas fa-sign-in-alt mr-2"></i>Connexion
                        </a>
                        <a href="/auth/register" class="text-white hover:bg-indigo-700 px-3 py-2 rounded-md text-sm font-medium ml-4">
                            <i class="fas fa-user-plus mr-2"></i>Inscription
                        </a>
                    <% } %>
                </div>

                <!-- Bouton menu mobile -->
                <div class="flex items-center sm:hidden">
                    <button type="button" class="mobile-menu-button inline-flex items-center justify-center p-2 rounded-md text-white hover:bg-indigo-700 focus:outline-none">
                        <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
                            <path class="inline-flex" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>

        <!-- Menu mobile -->
        <div class="hidden mobile-menu sm:hidden">
            <div class="px-2 pt-2 pb-3 space-y-1">
                <a href="/" class="text-white hover:bg-indigo-700 block px-3 py-2 rounded-md text-base font-medium">
                    <i class="fas fa-home mr-2"></i>Accueil
                </a>
                <a href="/cards" class="text-white hover:bg-indigo-700 block px-3 py-2 rounded-md text-base font-medium">
                    <i class="fas fa-cards mr-2"></i>Cartes
                </a>
                <% if (typeof user !== 'undefined' && user) { %>
                    <a href="/cards/collection" class="text-white hover:bg-indigo-700 block px-3 py-2 rounded-md text-base font-medium">
                        <i class="fas fa-folder mr-2"></i>Ma Collection
                    </a>
                    <a href="/cards/boosters" class="text-white hover:bg-indigo-700 block px-3 py-2 rounded-md text-base font-medium">
                        <i class="fas fa-box-open mr-2"></i>Boosters
                    </a>
                <% } %>
            </div>
        </div>
    </nav>

    <!-- Flash Messages -->
    <% if (typeof messages !== 'undefined' && messages) { %>
        <div class="max-w-7xl mx-auto px-4 sm lg:px-8 mt-4">
            <% if (messages.success) { %>
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
                    <span class="block sm:inline"><%= messages.success %></span>
                    <button type="button" class="absolute top-0 right-0 px-4 py-3" onclick="this.parentElement.remove()">
                        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                        </svg>
                    </button>
                </div>
            <% } %>
            <% if (messages.error) { %>
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                    <span class="block sm:inline"><%= messages.error %></span>
                    <button type="button" class="absolute top-0 right-0 px-4 py-3" onclick="this.parentElement.remove()">
                        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                        </svg>
                    </button>
                </div>
            <% } %>
        </div>
    <% } %>

    <!-- Main Content Container -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

<!-- Script pour le menu mobile -->
<script>
    document.querySelector('.mobile-menu-button').addEventListener('click', function() {
        document.querySelector('.mobile-menu').classList.toggle('hidden');
    });
</script>